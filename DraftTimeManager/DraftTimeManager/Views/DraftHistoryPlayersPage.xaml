<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DraftTimeManager.Views.DraftHistoryPlayersPage"
             Title="Players">
  <ListView x:Name="ListView"
          ItemTapped="Handle_ItemTapped"
          CachingStrategy="RecycleElement">

    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <Grid VerticalOptions="Center" Padding="10,0,10,0">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Rank}" />
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Player_Name}" />
          </Grid>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>

  </ListView>
</ContentPage>